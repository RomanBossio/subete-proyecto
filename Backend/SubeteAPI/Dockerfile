# Usa la imagen oficial de .NET para compilar
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copi치 los archivos del proyecto
COPY Backend/SubeteAPI/ ./

# Restaur치 los paquetes y compil치
RUN dotnet restore
RUN dotnet publish -c Release -o out

# Usa una imagen m치s liviana para correr la app
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/out .

# Expone el puerto
EXPOSE 80
ENTRYPOINT ["dotnet", "SubeteAPI.dll"]

